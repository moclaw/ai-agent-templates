{
  "name": "Claude AI Development Template",
  "version": "1.0.0",
  "description": "Professional template for Claude AI development with custom commands and workflows",
  
  "commands": {
    "enabled": true,
    "directory": ".claude/commands",
    "auto_load": true
  },
  
  "ai_assistant": {
    "model": "claude-3-5-sonnet-20241022",
    "max_tokens": 4096,
    "temperature": 1.0
  },
  
  "prime_context": {
    "auto_prime": true,
    "cache_duration": 3600,
    "include": [
      "README.md",
      "specs/**/*.md",
      "ai_docs/**/*.md"
    ],
    "exclude": [
      "node_modules/**",
      "dist/**",
      ".git/**"
    ],
    "max_tokens": 30000
  },
  
  "reflection": {
    "enabled": true,
    "auto_reflect": false,
    "frequency": "weekly",
    "include_patterns": [
      "src/**/*.{js,ts,jsx,tsx}",
      "tests/**/*.{js,ts}",
      "docs/**/*.md"
    ],
    "exclude_patterns": [
      "node_modules/**",
      "dist/**",
      "coverage/**"
    ],
    "metrics": {
      "complexity_threshold": 10,
      "duplication_threshold": 5,
      "coverage_target": 80
    }
  },
  
  "technical_manager": {
    "enabled": true,
    "team_size": 3,
    "sprint_length": 10,
    "planning_horizon": "quarter",
    "risk_tolerance": "medium",
    "architecture_style": "microservices",
    "estimation_method": "story_points",
    "review_required": true
  },
  
  "engineer_workflow": {
    "enabled": true,
    "auto_tests": true,
    "auto_lint": true,
    "commit_style": "conventional",
    "test_coverage_threshold": 80,
    "require_ticket_link": true,
    "pr_template": "default"
  },
  
  "parallel_execution": {
    "enabled": true,
    "max_threads": 3,
    "auto_coordinate": true,
    "conflict_resolution": "automatic",
    "progress_updates": "30m",
    "resource_limits": {
      "max_cpu_percent": 80,
      "max_ram_gb": 12,
      "max_disk_io": "100MB/s"
    }
  },
  
  "code_review_response": {
    "enabled": true,
    "auto_respond": false,
    "response_style": "professional",
    "include_commit_refs": true,
    "mark_resolved": true,
    "notify_reviewers": true,
    "batch_size": 10
  },
  
  "auto_merge": {
    "enabled": false,
    "min_approvals": 1,
    "require_all_checks": true,
    "merge_method": "squash",
    "delete_branch": true,
    "protected_branches": ["main", "production"],
    "exclude_labels": ["wip", "do-not-merge", "needs-review"]
  },
  
  "support_engineer": {
    "enabled": true,
    "priority_response_times": {
      "critical": "5m",
      "high": "15m",
      "medium": "1h",
      "low": "24h"
    },
    "auto_notify_customer": true,
    "create_post_mortem": true,
    "update_knowledge_base": true
  },
  
  "infinite_mode": {
    "enabled": true,
    "max_iterations": 100,
    "checkpoint_frequency": 10,
    "auto_commit": false,
    "require_confirmation": true
  },
  
  "prompt_engineering": {
    "library_path": "prompts/",
    "auto_optimize": true,
    "save_successful_prompts": true,
    "track_metrics": true
  },
  
  "integrations": {
    "github": {
      "enabled": true,
      "auto_link_issues": true,
      "auto_request_review": true
    },
    "jira": {
      "enabled": false,
      "server_url": "",
      "project_key": ""
    },
    "slack": {
      "enabled": false,
      "webhook_url": "",
      "notification_channel": ""
    }
  },
  
  "logging": {
    "level": "info",
    "log_api_requests": false,
    "log_file": "claude.log"
  }
}
